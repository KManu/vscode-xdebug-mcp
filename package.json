{
  "name": "vscode-xdebug-mcp",
  "displayName": "Xdebug MCP",
  "publisher": "KwabenaManu",
  "version": "0.0.2",
  "description": "Expose Xdebug controls to MCP-aware VS Code agents.",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "check-types": "tsc --noEmit --project tsconfig.json",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "vsce:package": "npm run package && npx vsce package"
  },
  "keywords": [
    "xdebug",
    "mcp",
    "debug"
  ],
  "author": "Kwabena Manu",
  "repository": {
    "type": "git",
    "url": "https://github.com/KManu/vscode-xdebug-mcp.git"
  },
  "license": "GPL-3.0-only",
  "type": "commonjs",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "xdebugMcpProvider",
        "label": "Xdebug MCP Provider"
      }
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.105.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0"
  }
}
